@model kwangho.mvc.Models.SignInModel

@{
    ViewData["Title"] = "SignIn";
}
<h1>Sign In</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SignIn">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="UserId" class="form-label"></label>
                <input asp-for="UserId" class="form-control" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <input type="submit" value="Sign In" class="btn btn-primary" />
            </div>
            <input asp-for="ReturnUrl" type="hidden" class="form-control" />
        </form>
    </div>
</div>
<div>
    <a asp-action="Index" asp-controller="Home">Go to Home</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
